<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
       <i class="fas fa-check-square"></i>
    <% else %>
        <i class="far fa-square"></i>
    <%end%>
    <%= link_to task.title, task_path(task)%> • <%= link_to delete_task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="far fa-trash-alt"></i><%end%></br>
  <% end %>
  </br>
 <%= link_to 'Add a new task ➕', 'tasks/new' %>
</ul>